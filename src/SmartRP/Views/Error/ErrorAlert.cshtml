
@{
	ViewBag.Title = "Error Alert";
}
<div class="container-fluid">
	<div class="row">
		<div class="col-sm-3 col-md-2 sidebar">
			<h3>@ViewBag.TypeOfUser</h3>
 
		 
		</div>
		<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			<h3>
				<span style="color:red">
			   Error:		@ViewBag.ErrorTitle
				</span>
			</h3>
			<hr />
			<div class="row">
				<div class="span4 offset4 alert alert-danger">Details: @ViewBag.Error</div>
			</div>

			<button onclick="goBack()" class="btn btn-default">Go Back</button>
			<script>
				function goBack() {
					window.history.back();
				}
			</script>
		</div>
	</div>
</div>