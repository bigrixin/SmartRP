@model SmartRP.Domain.ProjectStatus

@switch (@Model)
{
	case SmartRP.Domain.ProjectStatus.Pending:
	<span class="label label-warning">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Opening:
	<span class="label label-primary">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Processing:
	<span class="label label-danger">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Full:
	<span class="label label-info">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Registered:
	<span class="label label-info">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Completed:
	<span class="label label-success">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Closed:
	<span class="label label-default">@Model.ToString()</span>
		break;
	case SmartRP.Domain.ProjectStatus.Withdrawn:
	<span class="label label-default">@Model.ToString()</span>
		break;
}
