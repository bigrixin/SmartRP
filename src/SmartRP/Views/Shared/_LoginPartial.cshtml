@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
	{
	@Html.AntiForgeryToken()

		<ul class="nav navbar-nav navbar-right">
			<li class="dropdown">
				<a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown"> @User.Identity.GetUserName() <span aria-hidden="true" class="caret"></span></a>
				<ul class="dropdown-menu" role="menu">

					<li><a href="@Url.Action("Index", "MyAccount")"><span aria-hidden="true" class="fa fa-user"></span> My Account</a></li>
					<li><hr style="margin:4px" /></li>
					<li><a href="@Url.Action("Help", "Home")"><span aria-hidden="true" class="fa fa-question-circle"></span> Help</a></li>
					<li><hr style="margin:4px" /></li>
					<li><a href="@Url.Action("ChangePassword", "Manage")"><span aria-hidden="true" class="fa fa-key"></span> Change Password</a></li>
					<li><hr style="margin:4px" /></li>
					<li><a href="javascript:document.getElementById('logoutForm').submit()"><span aria-hidden="true" class="fa fa-sign-out"></span> Log off</a></li>
				</ul>

			</li>
		</ul>
	}
}
else
{
		<ul class="nav navbar-nav navbar-right">
			<li>@Html.ActionLink("Help", "Help", "Home")</li>
			<li>@Html.ActionLink("Student register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
			<li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
		</ul>
}
