@model SmartRP.Models.RegisterViewModel
@{
	ViewBag.Title = "Register";
}

<h2 class="page-header">Create a new account</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	@Html.ValidationSummary("", new { @class = "text-danger" })

	<div class="form-group container" style="display: none;">
		@Html.LabelFor(m => m.UserType, new { @class = "col-md-2 control-label" })
		<div class="radio col-md-10" >
			<label>
				<input type="radio" name="userType" value="Student" checked="checked">Student
			</label>
		</div>
	</div>
	<div class="alert alert-danger alert-dismissable fade in">
		<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
		<strong>Note:</strong> You can use any of your active emails to register an account. For security reasons, if you use your UTS Email in the registration, please don’t use your UTS password.
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
		<div class="col-md-5">
			@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
		</div>
	</div>
		<div class="form-group">
			@Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
			<div class="col-md-5">
				@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group">
			@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
			<div class="col-md-5">
				@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
			</div>
		</div>
 
		<div class="form-group">
			<div class="col-md-offset-3 col-md-9">
			<span style="color:gray">•	Passwords must have at least (i) one symbol, (ii) a number/digit and (iii) one upper case letter.</span><br /><br />
				<input type="submit" class="btn btn-default" value="Register" />
			</div>
		</div>
		<hr />
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<h3>Tutorials (Student functions)</h3><h6><br /></h6>
				<ul>
					<li><a href="https://youtu.be/80j4o5arEeQ" target="_blank"><h4>Student registration and fill profile</h4></a></li>
					<li><a href="https://youtu.be/5EqZCd13gEI" target="_blank"><h4>Send requests and confirm an offer of joining a project group</h4></a></li>
					<li><a href="https://youtu.be/bLsTn-dI-ks" target="_blank"><h4>Manage the project group</h4></a></li>
					<li><a href="https://youtu.be/ewOaeGS-y7I" target="_blank"><h4>Post a project (optional)</h4></a></li>
				</ul>
				<br />
			</div>
		</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
